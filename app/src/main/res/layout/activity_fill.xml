<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kellehj1.FYP.birdID.FillActivity">

    <Button
        android:id="@+id/button_orange"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:onClick="setColourOrange"
        app:backgroundTint="@color/btn_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_red" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/test_fill_outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_brown"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="setColourBrown"
        app:backgroundTint="@color/btn_brown"
        app:layout_constraintEnd_toStartOf="@+id/button_red"
        app:layout_constraintTop_toTopOf="@+id/button_red" />

    <Button
        android:id="@+id/button_red"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:onClick="setColourRed"
        app:backgroundTint="@color/btn_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_grey" />

    <Button
        android:id="@+id/button_black"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="setColourBlack"
        app:backgroundTint="@color/btn_black"
        app:layout_constraintEnd_toStartOf="@+id/button_grey"
        app:layout_constraintTop_toTopOf="@+id/button_grey" />

    <Button
        android:id="@+id/button_grey"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:onClick="setColourGrey"
        app:backgroundTint="@color/btn_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1" />

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:onClick="setColourWhite"
        app:backgroundTint="@color/btn_white"
        app:layout_constraintStart_toEndOf="@+id/button_grey"
        app:layout_constraintTop_toTopOf="@+id/button_grey" />

    <Button
        android:id="@+id/button_yellow"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:onClick="setColourYellow"
        app:backgroundTint="@color/btn_yellow"
        app:layout_constraintStart_toEndOf="@+id/button_red"
        app:layout_constraintTop_toTopOf="@+id/button_red" />

    <Button
        android:id="@+id/button_blue"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="setColourBlue"
        app:backgroundTint="@color/btn_blue"
        app:layout_constraintEnd_toStartOf="@+id/button_orange"
        app:layout_constraintTop_toTopOf="@+id/button_orange" />

    <Button
        android:id="@+id/button_green"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:onClick="setColourGreen"
        app:backgroundTint="@color/btn_green"
        app:layout_constraintStart_toEndOf="@+id/button_orange"
        app:layout_constraintTop_toTopOf="@+id/button_orange" />

</androidx.constraintlayout.widget.ConstraintLayout>